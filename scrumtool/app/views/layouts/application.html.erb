<!DOCTYPE html>
<html>
<head>
  <title>Scrumtool</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <div class="nav-wrapper">
        <ul id="nav-mobile" class="left hide-on-med-and-down">
        </ul>
        <a href="#" class="brand-logo center">SCRUM-Tool</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
              <% if user_signed_in? %>
                <li><%= link_to_unless_current("Abmelden", destroy_user_session_path, method: :delete ) %></li>
              <% else %>
                <li><%= link_to_unless_current("Anmelden", new_user_session_path ) %></li>
                <li><%= link_to_unless_current("Registieren", new_user_registration_path ) %></li>
              <% end %>
          </ul>
    </div>
  </nav>

<%= yield %>

</body>
</html>
